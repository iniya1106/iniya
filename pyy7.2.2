f compress_string(s):
    if len(s) == 0:
        return ""

    compressed_index = 0
    count_consecutive = 1
    compressed_string = ""

    for i in range(1, len(s)):
        if s[i] == s[i - 1]:
            count_consecutive += 1
        else:
            compressed_string += s[i - 1] + str(count_consecutive)
            count_consecutive = 1

    compressed_string += s[-1] + str(count_consecutive)

    if len(compressed_string) < len(s):
        for i in range(len(compressed_string)):
            s[i] = compressed_string[i]
        for i in range(len(compressed_string), len(s)):
            s[i] = ""

    return s

